<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="@color/black"
        android:text="Enter number of pcs."
        android:fontFamily="@font/ps_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:textColor="@color/black"
        android:paddingLeft="@dimen/_5sdp"
        android:id="@+id/edtAmount"
        android:digits="0123456789"
        android:inputType="number"
        android:hint="Enter Pcs"
        android:background="@drawable/border_button"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"></EditText>

    <Button
        android:layout_marginBottom="@dimen/_20sdp"
        android:id="@+id/btnAdd"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/m_semibold"
        android:textColor="@color/white"
        android:text="Add"
        android:background="@color/button_color"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"></Button>
</LinearLayout>