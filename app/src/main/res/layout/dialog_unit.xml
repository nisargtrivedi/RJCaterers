<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="@color/black"
        android:text="Select any one option"
        android:fontFamily="@font/ps_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <RadioGroup
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rdGram"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/black"
            android:text="Gram"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></RadioButton>
        <RadioButton
            android:id="@+id/rdKG"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/black"
            android:text="KG"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></RadioButton>

        <RadioButton
            android:id="@+id/radAmount"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/black"
            android:text="Amount"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></RadioButton>
    </RadioGroup>
    <EditText
        android:textColor="@color/black"
        android:paddingLeft="@dimen/_5sdp"
        android:id="@+id/edtAmount"
        android:digits="0123456789"
        android:inputType="number"
        android:hint="Enter Gram/KG/Amount"
        android:background="@drawable/border_button"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"></EditText>

    <Button
        android:layout_marginBottom="@dimen/_20sdp"
        android:id="@+id/btnAdd"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/m_semibold"
        android:textColor="@color/white"
        android:text="Add"
        android:background="@color/button_color"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"></Button>
</LinearLayout>